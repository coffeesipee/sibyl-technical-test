{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@sibyl/shared": [
        "packages/shared/dist"
      ],
      "@sibyl/shared/*": [
        "packages/shared/dist/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/dist"
  ]
}